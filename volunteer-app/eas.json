{
  "build": {
    "production": {
      "env": {
        "EXPO_PUBLIC_API_URL": "https://wevolunteer.app/api"
      }
    },
    "staging": {
      "env": {
        "EXPO_PUBLIC_API_URL": "https://wevolunteer.app/api"
      }
    },
    "preview": {
      "extends": "production",
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      }
    },
    "development": {
      "extends": "production",
      "developmentClient": true,
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      }
    }
  }
}
